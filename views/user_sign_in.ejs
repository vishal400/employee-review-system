<div class="container mt-5">
    <div class="form-container">
        <h2 class="text-center mb-4">Sign In</h2>
        <form action="/users/create-session" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                />
            </div>
            <button type="submit" class="btn btn-primary btn-signup-signin">
                Sign In
            </button>
        </form>
        <p class="mt-3 text-center">
            Don't have an account? <a href="/users/sign-up">Sign Up here</a>
        </p>
    </div>
</div>
